<!--components/my-scroll/my-scroll.wxml-->
<scroll-view>
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active': ''}}"     bindtap="onItemClick" data-index="{{index}}">
    <view class="container">{{item}}</view>
    </view>
  </block>
</scroll-view>

